@model Trezorix.Checkers.ManagerApp.Models.Shared.DeleteConfirmViewModel

@{
	ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this @Model.EntityName?</h3>

@using (Html.BeginForm(Model.DeletePostLink.Action, Model.DeletePostLink.Controller, new { id = Model.Id }))
{
	@Html.AntiForgeryToken()
	<p>
		<input type="hidden" name="ID" value="@Model.Id" />
		<input type="submit" value="Delete" /> |
		<button type="button" value="Cancel" onclick="window.location = '@Url.Action(Model.CancelLink.Action, Model.CancelLink.Controller, new { id = Model.Id })'">Cancel</button>
	</p>
}

